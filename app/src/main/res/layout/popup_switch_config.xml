<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#80000000">

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="225dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp">

            <RelativeLayout
                android:paddingHorizontal="10dp"
                android:id="@+id/layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    android:id="@+id/text_phone"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone's Socket: "/>

                <EditText
                    android:inputType="number"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/textColor"
                    android:textSize="14sp"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/edittext_phone_socket"
                    android:layout_toEndOf="@id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/layout_phone"
                android:paddingHorizontal="10dp"
                android:id="@+id/layout_laptop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    android:id="@+id/text_laptop"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laptop's Socket: "/>

                <EditText
                    android:inputType="number"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/textColor"
                    android:textSize="14sp"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/edittext_laptop_socket"
                    android:layout_toEndOf="@id/text_laptop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/layout_laptop"
                android:paddingHorizontal="10dp"
                android:id="@+id/layout_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-medium"
                    android:background="@null"
                    android:textAllCaps="false"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    android:id="@+id/text_extra"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra Socket: "/>

                <EditText
                    android:inputType="number"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textColorHint="@color/textColor"
                    android:textSize="14sp"
                    android:paddingHorizontal="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/edittext_extra_socket"
                    android:layout_toEndOf="@id/text_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_extra">

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingVertical="10dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button_switch_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"/>

                <Button
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/button_switch_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save"/>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>