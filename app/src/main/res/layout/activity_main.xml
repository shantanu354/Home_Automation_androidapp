<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/custom_action_bar" />

    <RelativeLayout
        android:id="@+id/office_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_style"
        android:paddingHorizontal="10dp">


        <TextView
            android:id="@+id/phone_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="15dp"
            android:text="Office"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondary"
            android:textSize="17.5sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/office_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:src="@drawable/ic_autorenew" />

            <View
                android:id="@+id/auto_bar"
                android:layout_width="26dp"
                android:layout_height="2dp"
                android:layout_below="@id/office_auto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="#888888" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/living_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:background="@drawable/layout_style"
        android:paddingHorizontal="10dp">

        <TextView
            android:id="@+id/laptop_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="15dp"
            android:text="Living Room"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondary"
            android:textSize="17.5sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/phone1_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:src="@drawable/ic_autorenew" />

            <View
                android:id="@+id/auto2_bar"
                android:layout_width="26dp"
                android:layout_height="2dp"
                android:layout_below="@id/phone1_auto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="#888888" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kitchen_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/layout_style"
        android:paddingHorizontal="10dp">


        <TextView
            android:id="@+id/extra_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="15dp"
            android:text="Kitchen"
            android:textAlignment="viewStart"
            android:textColor="@color/colorSecondary"
            android:textSize="17.5sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/phone3_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:src="@drawable/ic_autorenew" />

            <View
                android:id="@+id/auto3_bar"
                android:layout_width="26dp"
                android:layout_height="2dp"
                android:layout_below="@id/phone3_auto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="#888888" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bed_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="10dp"
        android:background="@drawable/layout_style"
        android:paddingHorizontal="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="15dp"
            android:text="Bed Room"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondary"
            android:textSize="17.5sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp">

            <ImageButton
                android:id="@+id/phone12_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:src="@drawable/ic_autorenew" />

            <View
                android:id="@+id/auto22_bar"
                android:layout_width="26dp"
                android:layout_height="2dp"
                android:layout_below="@id/phone12_auto"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="#888888" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
